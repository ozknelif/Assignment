<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaveData">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginRight="15sp"/>

            <TextView
                android:id="@+id/shared_username_text"
                android:layout_width="wrap_content"
                android:layout_height="56sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_hint" android:layout_marginRight="15sp"/>/>

            <TextView
                android:id="@+id/shared_password_edit"
                android:layout_width="wrap_content"

                android:layout_height="56sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age" />

            <EditText
                android:id="@+id/shared_age_edit"
                android:layout_width="wrap_content"
                android:layout_height="56sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Gender" />

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="56sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height" />

            <EditText
                android:id="@+id/shared_height_edit"
                android:layout_width="wrap_content"
                android:layout_height="56sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight" />

            <EditText
                android:id="@+id/shared_weight_edit"
                android:layout_width="wrap_content"
                android:layout_height="56sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shared_app_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="App Mode" />

            <Spinner
                android:id="@+id/spinner_app_mode"
                android:layout_width="match_parent"
                android:layout_height="56sp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/shared_save_button"
        android:layout_width="match_parent"
        android:layout_height="56sp"
        android:text="Save" />
</LinearLayout>